{
	"apiVersion": 2,
	"name": "ifdigital/entity-loop",
	"title": "Entity Loop",
	"category": "images-alt2",
	"icon": "admin-post",
	"description": "Display and filter latest post (types)",
	"keywords": [
		"latest",
		"posts",
		"post",
		"types",
		"filter"
	],
	"supports": {
		"html": false,
		"align": [
			"wide",
			"full"
		]
	},
	"textdomain": "latest-posts",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
	"attributes": {
		"numberOfPosts": {
			"type": "number",
			"default": 4
		},
		"includedIds": {
			"type": "string",
			"default": ""
		},
		"order": {
			"type": "string",
			"default": "desc"
		},
		"orderBy": {
			"type": "string",
			"default": "date"
		},
		"categories": {
			"type": "array",
			"items": {
				"type": "object"
			}
		},
		"displayFeaturedImage": {
			"type": "boolean",
			"default": true
		},
		"title": {
			"type": "string",
			"default": "Titel Beschreibung"
		},
		"description": {
			"type": "string",
			"default": "Inhalt Beschreibung"
		}
	}
}
